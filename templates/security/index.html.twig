{% extends 'base.html.twig' %}

{% block title %}Login de Aspirantes!{% endblock %}
{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <div class="container col-md-8 col-sm-8 col-xs-12" style="margin-left: 20%;margin-right: 5%;">
        <form class="form-signin" action="{{ path('emm_user_login_check') }}" method="post">
            {% if registrado %}
                <div class="alert alert-success">
                    <p>
                        Aspirante registrado exitosamente! usuario: {{ username }}
                    </p>
                </div>
            {% endif %}

            {% if error_autenticacion == true %}
                <div class="alert alert-warning">
                    <p>
                        Error de autenticaci√≥n
                    </p>
                </div>
            {% endif %}

            <h4>Datos de Usuario</h4>
            <hr style="border:0.5px solid #DDD;"/>
            <label for="username" class="sr-only">Usuario:</label>
            <input type="text" id="username" class="form-control" name="usuario"  required autofocus/>

            <label for="password" class="sr-only">Password:</label>
            <input type="password" id="password" class="form-control" name="password" required/>
            <input type="hidden" class="form-control" name="_target_path" value="emm_user_homepage"/>

            <button type="submit" class="btn btn-lg bnt-primary btn-block" style="background: #009688;
                        border-radius: 0;
                        color: #FFF;">Aceptar</button>
            <br />
            <br />
            <br />
        </form>
    </div>
</div><br />
<br />
{% endblock %}
